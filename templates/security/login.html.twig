{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section class="">
    <form method="post">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">DÃ©connexion</a>
        </div>
        {% endif %}
        <div>
            <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1> 
        </div>
        <div>
            <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
            autocomplete="email" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"
            required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        </div>
        <div>
            <button class="btn btn-lg btn-primary" type="submit">
                Connexion
            </button>
        </div>
        
    </form>
</section>
<a class="text-info" href={{path('app_register')}}> Creer votre compte ICI </a>
{# <a href={{path('app_forgot_password_request')}}> reset password</a> #}
{% endblock %}